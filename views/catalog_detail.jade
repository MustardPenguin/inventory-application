extends layout 

block content 
  div 

    p #{catalog.name}: #{catalog.description}
    div
      a(href="/inventory/catalog/" + catalog._id + "/delete") Delete catalog
    div
      a(href="/inventory/catalog/" + catalog._id + "/update") Update catalog
    p List of items with this catalog: 
    ul 
      each product in products 
        li 
          div 
            a(href=product.url) #{product.name}